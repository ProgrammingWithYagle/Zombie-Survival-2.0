{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/items.schema.json",
  "title": "Item",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_\\-]+$"
    },
    "name": {
      "type": "string"
    },
    "maxStack": {
      "type": "integer",
      "minimum": 1,
      "maximum": 999
    },
    "iconPath": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "id",
    "name",
    "maxStack",
    "iconPath"
  ]
}