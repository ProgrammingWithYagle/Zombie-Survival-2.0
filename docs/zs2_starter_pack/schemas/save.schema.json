{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/save.schema.json",
  "title": "SaveFile",
  "type": "object",
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "player": {
      "type": "object",
      "properties": {
        "pos": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        },
        "hp": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "selectedHotbar": {
          "type": "integer",
          "minimum": 0,
          "maximum": 7
        }
      },
      "required": [
        "pos",
        "hp",
        "selectedHotbar"
      ]
    },
    "inventory": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "slot": {
            "type": "integer",
            "minimum": 0
          },
          "itemId": {
            "type": "string"
          },
          "count": {
            "type": "integer",
            "minimum": 1
          }
        },
        "required": [
          "slot",
          "itemId",
          "count"
        ]
      }
    }
  },
  "required": [
    "version",
    "player",
    "inventory"
  ]
}